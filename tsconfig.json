{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./resources/js/src/*"
      ],
      "@layouts/*": [
        "./resources/js/src/@layouts/*"
      ],
      "@layouts": [
        "./resources/js/src/@layouts"
      ],
      "@core/*": [
        "./resources/js/src/@core/*"
      ],
      "@core": [
        "./resources/js/src/@core"
      ],
      "@images/*": [
        "./resources/js/src/assets/images/*"
      ],
      "@styles/*": [
        "./resources/js/src/assets/styles/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./vite.config.*",
    "./env.d.ts",
    "./shims.d.ts",
    "./resources/js/src/**/*",
    "./resources/js/src/**/*.vue",
    "./auto-imports.d.ts",
    "./components.d.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./public"
  ]
}